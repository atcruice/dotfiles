[include]
    path = .gitconfig.local

[color]
    ui = auto

[color "diff"]
    commit = yellow reverse

[interactive]
    diffFilter = diff-so-fancy

[push]
    default = tracking

[merge]
    log = true
    conflictstyle = diff3
    tool = vimdiff

[rerere]
    enabled = 1

[diff]
    compactionHeuristic = true

[difftool "vimdiff"]
    cmd = vimdiff $LOCAL $REMOTE

[mergetool]
    prompt = false

[rebase]
    autosquash = true
    autostash = true

[tag]
    sort = version:refname

[user]
    name = Alex Cruice
    email = alex.cruice@gmail.com
    signingkey = B9208755

[core]
    excludesfile = ~/.gitignore
    pager = diff-so-fancy | less --tabs=2 --RAW-CONTROL-CHARS --quit-if-one-screen --no-init

[alias]
    s = status --untracked-files=all
    l = log --oneline --decorate --graph
    wip = commit -m "WIP"

[branch]
    autoSetupRebase = always
