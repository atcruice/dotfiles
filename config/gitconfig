[include]
    path = .gitconfig.local

[color]
    ui = auto

[color "diff"]
    commit = yellow reverse

[interactive]
    diffFilter=(which diff-highlight &> /dev/null && diff-highlight || cat)

[push]
    default = tracking

[merge]
    log = true
    conflictstyle = diff3
    tool = vimdiff

[rerere]
    enabled = 1

[diff]
    compactionHeuristic = true

[difftool "vimdiff"]
    cmd = vimdiff $LOCAL $REMOTE

[mergetool]
    prompt = false

[rebase]
    autosquash = true
    autostash = true

[tag]
    sort = version:refname

[user]
    name = Alex Cruice
    email = alex.cruice@gmail.com
    signingkey = B9208755

[core]
    pager = diff-highlight | less --tabs=2
    excludesfile = ~/.gitignore
    pager = (which diff-highlight &> /dev/null && diff-highlight || cat) | ${PAGER:-less}

[alias]
    s = status --untracked-files=all
    l = log --oneline --decorate --graph

[branch]
    autoSetupRebase = always
