fresh_after_build() {
  read -p 'Quick fresh? (y/n): ' answer

  if [ "$answer" = 'y' ]; then
    vim +PluginInstall +PluginClean +qall
  else
    vim +PluginInstall! +PluginClean! +qall
  fi
}
