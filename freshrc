# vim: set ft=sh:

fresh freshshell/fresh bin/fresh --bin # handles updating fresh

fresh freshshell/fresh contrib/source-build.sh --file=~/.bash_profile
fresh freshshell/fresh contrib/source-build.sh --file=~/.bashrc

fresh rupa/z z.sh
fresh shell/\*

fresh jasoncodes/dotfiles config/ackrc --file
fresh jasoncodes/dotfiles config/gitconfig --file
fresh jasoncodes/dotfiles config/psqlrc --file
fresh jasoncodes/dotfiles config/sqliterc --file
fresh jasoncodes/dotfiles config/tmux.conf --file
fresh config/\* --file

fresh git/git contrib/diff-highlight/diff-highlight --bin
fresh jasoncodes/dotfiles bin/adduser --bin
fresh jasoncodes/dotfiles bin/chruby-exec-all --bin
fresh jasoncodes/dotfiles bin/wemux/\* --bin

fresh-options --file=~/.vimrc
  fresh vim/encoding.vim
  fresh vim/mapleader.vim
  fresh vim/vundle_header.vim
  fresh vim/plugins/\*.vim
  fresh jasoncodes/dotfiles vim/plugins/ctrlp.vim
  fresh vim/vundle_footer.vim
  fresh jasoncodes/dotfiles vim/config/tags.vim
  fresh vim/settings.vim
  fresh vim/mappings.vim
fresh-options

update_vundle_plugins() {
  read -rp 'Update vundle plugins? (y/n): ' answer

  if [[ "$answer" = 'y' ]]
  then
    vim +PluginUpdate +PluginClean! +qall
  else
    vim +PluginInstall +PluginClean +qall
  fi
}

fresh_after_build() {
  update_vundle_plugins
}
